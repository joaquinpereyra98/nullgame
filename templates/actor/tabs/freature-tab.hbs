{{#each system.categories.features as |categoryLabel categoryKey|}}
{{#unless (eq categoryKey 'uncategorized')}}
<div class="category-header flex-cont">
    <div class="category-name">
        <input class="category-name-input" type="text" name="system.categories.features.{{categoryKey}}" value="{{categoryLabel}}">
    </div>
    <div class="tool-section">
        <button data-type='features' data-category='{{categoryKey}}' class="tool-button create-button">Add Item</button>
        <button data-type='features' data-category="{{categoryKey}}" class="tool-button delete-category">Del. Cat.</button>
    </div>
</div>
{{/unless}}
{{/each}}
<div class="category-header flex-cont">
    <div class="category-name">
        {{system.categories.features.uncategorized}}
    </div>
    <div class="tool-section">
        <button class="category-create">Add Category</button>
    </div>
</div>