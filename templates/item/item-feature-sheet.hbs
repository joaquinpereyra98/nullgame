<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-container">
      <div class="first-header-container flex-cont">
        <div class="name-container">
          <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'NULL_GAME.SheetPH.Name'}}"/>
        </div>
      </div>
      <div class="second-header-container flex-cont">
        <select name="system.category" data-type="string">
          {{#select system.category}}
            {{#each item.actor.system.categories.features as |category key|}}
            <option value="{{key}}">{{category}}</option>
            {{/each}}
          {{/select}}
        </select>
      </div>

    </div>
  </header>

  <section class="sheet-body">
    
  </section>

</form>
